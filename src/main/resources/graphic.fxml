<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="713.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GraphicController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f25c05;" BorderPane.alignment="CENTER">
                    <Label alignment="CENTER" text="Graphic Binary Tree" textFill="WHITE">
                        <font>
                            <Font size="33.0" />
                        </font>
                        <VBox.margin>
                            <Insets top="15.0" />
                        </VBox.margin>
                    </Label>
                    <HBox alignment="CENTER" spacing="30.0">
                        <Button fx:id="btnRandomize" prefHeight="30.0" prefWidth="180.0" text="Randomize" />
                        <Button fx:id="btnLevels" prefHeight="30.0" prefWidth="180.0" text="Show Levels" />
                        <Button fx:id="btnTourInfo" prefHeight="30.0" prefWidth="180.0" text="Tour Info" />
                    </HBox>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </VBox>
            </top>

            <center>
                <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER">
                    <content>
                        <Pane fx:id="treePane" style="-fx-background-color: lightgreen;" />
                    </content>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>